version: '3.8'

pipeline {
    agent any

    stages {

        stage('Initial setup') {
            steps {
                script {
                    sh 'sudo chmod +x entrypoint.sh'
                    sh 'sudo sudo ufw allow 44392'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Executar Docker Compose no host da m√°quina
                    sh 'docker compose up'
                }
            }
        }
    }

    post {
        always {
            // Limpar recursos
            cleanWs()
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
