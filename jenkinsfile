pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Executar Docker Compose no host da m√°quina
                    sh '/usr/local/bin/docker-compose -f  /home/vagrant/BankApplicationApi/docker-compose.yml up -d'
                }
            }
        }
    }

    post {
        always {
            // Limpar recursos
            cleanWs()
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
