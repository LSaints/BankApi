pipeline {
    agent any

    environment {
        DOCKER_SOCKET = '/var/run/docker.sock'
    }

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Executar Docker Compose dentro do contÃªiner do Jenkins
                    sh 'docker run --rm -v $DOCKER_SOCKET:$DOCKER_SOCKET -v $PWD:$PWD -w $PWD docker/compose:latest up -d'
                }
            }
        }
    }

    post {
        always {
            // Limpar recursos
            cleanWs()
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
