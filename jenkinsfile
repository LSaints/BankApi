pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Executar Docker Compose
                    sh 'sudo docker compose up -d'
                }
            }
        }
    }

    post {
        always {
            // Limpar recursos
            cleanWs()
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
