pipeline {
    agent any

    stages {
        stage('Copy Files') {
            steps {
                script {
                    // Copiar os arquivos da aplicação do contêiner para o host
                    sh 'jenkins-master:/var/jenkins_home/workspace/BankApplicationApi@temp /home/vagrant/'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Executar Docker Compose no host da máquina
                    sh '/usr/local/bin/docker-compose -f  /home/vagrant/BankApplicationApi/docker-compose.yml up -d'
                }
            }
        }
    }

    post {
        always {
            // Limpar recursos
            cleanWs()
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed!'
        }
    }
}
